Setup Virtual Environment  Application:
    1. pip3 install virtualenv
    2. virtualenv venv
    3. source venv/bin/activate
    4. pip3 install -r requirements.txt

RUN Application:
    export FLASK_APP=run.py
    flask run


sqlite3

.open docker_data.db

CREATE TABLE docker(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    command VARCHAR(50),
    comment VARCHAR(50)
);

.tables

.schema docker

INSERT INTO docker (command, comment) VALUES ('docker build -t app .', 'BUILD Docker Image');
INSERT INTO docker (command, comment) VALUES ('docker run --rm --name web -p 8080:8080 app', 'RUN Docker Container with Flask');


SELECT * FROM docker;

.mode line / column
.headers on / off
.width 2 8 8

docker build -t db .
docker run --rm -it -v `pwd`:/db some-sqlite test.db
docker run --rm -it -v /Users/iveram/Documents/docker/database:/usr/src/db db


docker run --rm -it -p 5000 -v /Users/iveram/Documents/docker/database:/usr/src/db db

docker inspect database | grep IPAddress





